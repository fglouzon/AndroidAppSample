<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="false">

    <ImageView
        android:id="@+id/item_image_product_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/item_price_product_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="5dp"
            android:textIsSelectable="false"
            android:textSize="25sp" />
        <ImageView
            android:id="@+id/wishlist_product_gridview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/wishlist"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_price_product_gridview"
            />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/glouzonf/work/git/SampleApp/app/src/main/res/layout/item_adapter_products_gridview.xml -->