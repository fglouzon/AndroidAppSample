<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_activity_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/brandProductDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:visibility="invisible"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pagerProductDetails"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <com.viewpagerindicator.LinePageIndicator
            android:id="@+id/indicatorProductDetails"
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/descriptionProductDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:minLines="5"
            android:textSize="12sp" />

        <Button
            android:id="@+id/addToCartProductDetails"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Add to basket" />

    </LinearLayout>
</ScrollView><!-- From: file:/Users/glouzonf/work/git/SampleApp/app/src/main/res/layout/product_details_fragment.xml -->